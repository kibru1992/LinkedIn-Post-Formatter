{
  "manifest_version": 3,
  "name": "LinkedIn Post Formatter Pro",
  "version": "1.0.0",
  "description": "Bold, Italic, and Code formatting for LinkedIn posts using Unicode.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Open LinkedIn Formatter"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "permissions": [
    "sidePanel",
    "storage"
  ]
}
